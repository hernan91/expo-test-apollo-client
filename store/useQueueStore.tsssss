import { OfflineLink } from "@/lib/client";
import { create } from "zustand";

type StoreOperations = {
  queueState: () => { operations: any[]; length: number };
  update: (newState: any) => void;

  //updateOperations: () => void;
};

export const useQueueStore = create<StoreOperations>((set) => ({
  queueState: { operations: [], length: 0 },
  update: (newState) => set({ queueState: newState }),
}));
